<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/textBoldColor</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textLightColor</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="category_name">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textBoldColor</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="hintText">

    </style>

    <!--  views  -->
    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>


    <style name="horizontal_colored_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="outline_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/inputGrayColor</item>
        <item name="boxStrokeColor">@color/accentColor</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

</resources>