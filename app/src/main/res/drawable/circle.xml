<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="26"
            android:useLevel="false">
            <solid android:color="@color/outlineButtonColor" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:useLevel="true">
                <solid android:color="@color/magenta_color" />

                <gradient
                    android:angle="90"
                    android:centerColor="@color/magenta_color"
                    android:centerX="50%"
                    android:gradientRadius="65dp"
                    android:startColor="#E8FF00FF"
                    android:type="radial" />

            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:useLevel="true">
                <solid android:color="@color/magenta_color" />

                <gradient
                    android:angle="90"
                    android:centerColor="@color/magenta_color"
                    android:centerX="50%"
                    android:gradientRadius="65dp"
                    android:startColor="#E8FF00FF"
                    android:type="radial" />

            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="26"
                android:useLevel="true">
                <solid android:color="@color/magenta_color" />
                <corners android:radius="15dp" />
            </shape>
        </rotate>
    </item>

</layer-list>